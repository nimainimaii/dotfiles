#!/bin/sh

# Show wifi 📶 and percent strength or 📡 if none.
# Show 🌐 if connected to ethernet or ❎ if none.
# Show 🔒 if a vpn connection is active

WIFI=$(nmcli -terse -get-values NAME,TYPE connection show --active | grep -i wireless | cut -d: -f1)

if [ -z "$WIFI" ]; then
	echo "📡"
else
	echo "📶 $WIFI"
fi
