#!/bin/sh

OPTION=$(echo "Lock
Exit XServer
Logout
Shutdown
Reboot" | dmenu -i)

[ -z "${OPTION}" ] && exit

case "${OPTION}" in
    'Lock') 
        lockscreen;;
    'Exit XServer')
        pkill xinit;;
    'Logout')
        kill -9 -1;;
    'Shutdown')
        CONFIRM=$(echo "No
Yes" |\
            dmenu -i -p "Are you sure you want to shutdown?")
        [ "$CONFIRM" = Yes ] && poweroff
        ;;
    'Reboot')
        CONFIRM=$(echo "No
Yes" |\
            dmenu -i -p "Are you sure you want to reboot?")
        [ "$CONFIRM" = Yes ] && reboot
        ;;
esac
